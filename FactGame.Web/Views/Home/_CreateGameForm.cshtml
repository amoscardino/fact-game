@model CreateGameViewModel

<form asp-action="CreateGame"
      asp-controller="Home"
      method="post"
      class="card">

    <div class="card-header">Create a New Game</div>

    <div class="card-body">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit"
                    class="btn btn-primary btn-lg">
                GO!
            </button>
        </div>
    </div>

</form>
